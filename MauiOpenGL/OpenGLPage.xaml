<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiOpenGL.OpenGLPage"
             xmlns:muog="clr-namespace:MauiOpenGL.Views;assembly=MauiOpenGL.Views"
             Title="OpenGLPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition />
        </Grid.RowDefinitions>

        <muog:MauiOpenGLView   Grid.Row="1"  />
        
        <VerticalStackLayout  Spacing="10" Padding="10" Grid.Row="0" BackgroundColor="Yellow" >

            <Label TextColor="Black" Text="This view uses OpenTK to call openGL functions and a native android implementation for the GLSurfaceView"/>
            <Label TextColor="Black" Text="Future will be attempt to implement that also through the other platforms"/>
        </VerticalStackLayout>
        
        

    </Grid>


            
    
</ContentPage>